include ../components/common/head.pug

doctype html
html(lang="zh-Hant-TW")
  +head("category-pagination")
  head
    link(rel="stylesheet" href="./css/swiper-bundle.min.css")
    script(src="./js/swiper-bundle.min.js")
  body
    include ../components/common/header.pug

    main(class="flex flex-col mx-auto max-w-screen-2xl lg:px-[148px] pt-6 lg:pt-10 pb-[94px] lg:pb-[120px]")
      // 右邊商品列表
      section(class="flex-1")
        // 麵包屑
        ul(class="flex flex-wrap items-center px-6 space-x-1 lg:px-0")
          li(class="breadCrumbLink")
            a(class="text-sm text-slate-600" href="#") 全部商品
          li(class="breadCrumbLink")
            a(class="text-sm ext-slate-600" href="#") 低溫食品
          li(class="breadCrumbLink")
            a(class="text-sm ext-slate-600" href="#") 低溫醬料

        // 標題
        div(class="lg:text-center lg:mt-[37px] mt-6 lg:px-0 px-6")
          p(class="text-xl font-semibold text-black") 低溫醬料
            span(class="ml-3 text-base text-black lg:ml-4") (189)

        // tag 分類
        div(class="lg:mx-0 mx-[10px] pb-4 border-b lg:pb-0 lg:border-b-0 border-slate-300")
          ul(class="flex items-center lg:flex-wrap flex-nowrap space-x-4 lg:overflow-visible overflow-x-auto lg:mt-6 mt-[37px] lg:px-0 px-[14px]")
            // active 狀態為 "text-white bg-origin-700"，非 active 狀態為 "text-black bg-neutral-100"
            li
              button(class="px-4 py-2 text-sm text-white duration-150 rounded whitespace-nowrap bg-origin-700 hover:bg-origin-700 hover:text-white" type="button") 全部
            li
              button(class="px-4 py-2 text-sm text-black duration-150 rounded whitespace-nowrap bg-neutral-100 hover:bg-origin-700 hover:text-white" type="button") 牛肉
            li
              button(class="px-4 py-2 text-sm text-black duration-150 rounded whitespace-nowrap bg-neutral-100 hover:bg-origin-700 hover:text-white" type="button") 雞肉
            li
              button(class="px-4 py-2 text-sm text-black duration-150 rounded whitespace-nowrap bg-neutral-100 hover:bg-origin-700 hover:text-white" type="button") 羊肉
            li
              button(class="px-4 py-2 text-sm text-black duration-150 rounded whitespace-nowrap bg-neutral-100 hover:bg-origin-700 hover:text-white" type="button") 海鮮
            li
              button(class="px-4 py-2 text-sm text-black duration-150 rounded whitespace-nowrap bg-neutral-100 hover:bg-origin-700 hover:text-white" type="button") 低溫醬料

        // 分類標題
        a(class="block mt-5 lg:mt-6" href="#") 
          img(class="object-cover object-center w-full lg:h-[400px] h-[180px] lg:rounded" src="./images/category/categoryBanner.png" alt="")
        
      // 篩選列表
      section(class="mt-10 lg:mt-4")
        ul(class="flex items-center text-xl font-semibold text-center text-black lg:px-0 px-6 lg:space-x-[46px] space-x-2")
          li
            p(class="text-sm text-slate-600") 最新
          // active 狀態為 "text-origin-700 bg-neutral-100"，非 active 狀態為 "text-slate-600"
          li
            button(class="px-3 lg:px-[18px] py-[15px] text-sm text-origin-700 bg-neutral-100 flex items-center space-x-3 rounded-lg duration-150 group hover:text-origin-700 hover:bg-neutral-100" type="button")
              span 價錢高到低
