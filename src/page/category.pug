include ../components/common/head.pug

doctype html
html(lang="zh-Hant-TW")
  +head("category")
  head
    link(rel="stylesheet" href="./css/swiper-bundle.min.css")
    script(src="./js/swiper-bundle.min.js")
  body
    include ../components/common/header.pug

    main(class="relative flex flex-col mx-auto max-w-screen-2xl pt-6 lg:pt-10 pb-[102px] lg:pb-[120px]")
      div(class="flex pb-10 mx-0 border-b lg:space-x-8 border-neutral-200 lg:mx-10 lg:pb-12")
        // 左邊選單
        section(class="flex-1 max-w-[182px] lg:block hidden")
          p(class="text-xl font-semibold text-slate-600") 低溫食品
          ul(id="dropdownMenu" class="flex flex-col mt-10 space-y-4")
            each val in [1, 2, 3, 4, 5]
              li(class="relative")
                button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                  span= `胡同裏的心港點${val}`
                  img(class="dropdwonIcon" src="./images/arrows/light_small_down.svg", alt="")
                  img(class="hidden dropupIcon" src="./images/arrows/light_small_up.svg", alt="")
                div(class="hidden flex-col mt-[10px] border-t border-b bg-neutral-50 border-neutral-200 dropdownList")
                  each item in [1, 2, 3, 4, 5, 6]
                    a(class="px-5 py-4" href="#")= `港點${item}`

        // 右邊區塊
        section(class="flex-1")
          // 麵包屑
          ul(class="flex flex-wrap items-center px-6 space-x-1 lg:px-0")
            li(class="breadCrumbLink")
              a(class="text-sm text-slate-600" href="#") 商品
            li(class="breadCrumbLink")
              a(class="text-sm text-slate-600" href="#") 低溫食品

          // 分類標題
          a(class="block mt-5 lg:mt-6" href="#") 
            img(class="object-cover object-center w-full lg:h-[400px] h-[180px] lg:rounded" src="./images/category/categoryBanner.png" alt="")
          
          // 獨家商品
          p(class="mt-10 text-xl font-semibold text-center text-slate-600 lg:mt-12") 胡同嚴選/ 獨家商品
          div(class="flex justify-between mt-10 lg:px-0 px-[10px] space-x-[10px]")
            each val in [1, 2, 3]
              a(href="#") 
                img(class="object-cover object-center w-full max-h-[335px] h-auto" src=`./images/category/exclusive${val}.png` alt="")
                p(class="lg:text-base text-xs text-slate-600 lg:px-[7px] lg:mt-6 mt-2 text-center lg:text-left") 胡同裏的心港點
          
          // 最新消息
          div(class="mt-10 lg:mt-14")
            a(class="" href="#")
              img(class="object-cover object-center w-full h-16 lg:h-auto" src="./images/category/news.png", alt="")

          // 精選推薦
          p(class="mt-10 text-xl font-semibold text-center text-slate-600 lg:mt-12") 精選推薦
          div(class="grid grid-cols-2 gap-3 px-4 pb-4 mt-10 lg:grid-cols-4 lg:gap-8 lg:px-0 lg:pb-14")
            // 商品卡片 - 1
            include ../components/product/card1.pug
            // 商品卡片 - 2
            include ../components/product/card2.pug
            // 商品卡片 - 3
            include ../components/product/card1.pug
            // 商品卡片 - 4
            include ../components/product/card2.pug

            // 廣告版位
            a(class="flex col-span-2" href="#")
              img(class="object-cover object-center w-full" src="./images/category/categoryAD.png" alt="")

            // 商品卡片 - 5
            include ../components/product/card1.pug
            // 商品卡片 - 6
            include ../components/product/card2.pug

      // 專屬精選項目
      section(class="mt-10 lg:mt-12")
        p(class="text-xl font-semibold text-center text-black") 專屬精選項目

        // 輪播圖
        div(class="lg:!pl-10 !pl-6 !pb-[38px] !mt-[38px] swiper swiper-featured")
          div(class="swiper-wrapper")
            each val in [1, 2, 3, 4, 5, 6]
              a(class="lg:max-w-[320px] max-w-[270px] swiper-slide" href="#")
                img(class="lg:max-w-[320px] max-w-[270px] lg:max-h-[380px] max-h-[320px] w-full h-full object-cover" src=`./images/category/featured${val}.png`, alt="")
                p(class="mt-8 text-base text-black") 全站熱銷商品第二件五折  >
          div(class="2xl:max-w-[1300px] xl:max-w-[1000px] lg:max-w-[900px] md:max-w-[700px] max-w-[320px] !left-[51%] !bottom-0 !-translate-x-1/2 swiper-scrollbar swiper-featured-scrollbar")
          div(class="swiper-button-prev swiper-button-featured-prev bg-white lg:!flex !hidden items-center justify-center !w-12 !h-[60px] !left-0 rotate-180")
            img(src="./images/arrows/arrow_forward_24px.svg" alt="")
          div(class="swiper-button-next swiper-button-featured-next bg-white lg:!flex !hidden items-center justify-center !w-12 !h-[60px] !right-0")
            img(src="./images/arrows/arrow_forward_24px.svg" alt="")
     
        div(class="px-4 lg:px-[148px] lg:mt-14 mt-10")
          div(class="grid grid-cols-2 lg:grid-cols-4 lg:gap-x-8 lg:gap-y-10 gap-x-3 gap-y-4")
            each val in [1, 2, 3, 4, 5, 6, 7, 8]
              include ../components/product/card1.pug
              include ../components/product/card2.pug

          // 分頁
          div(class="lg:mt-[66px] mt-10 lg:flex hidden items-center justify-center space-x-4")
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") <
            // active 狀態為 "text-white bg-origin-500"，非 active 狀態為 "text-slate-800"
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium text-white rounded-sm bg-origin-500" type="button") 1
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") 2
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") 3
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") ...
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") 10
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") >

      // 進階篩選按鈕
      // 一般狀態: bg-black、選取的狀態: bg-origin-700
      button(class="lg:hidden fixed bottom-10 left-1/2 -translate-x-1/2 z-50 w-[145px] h-[51px] flex items-center justify-center space-x-2 bg-black rounded-full text-sm text-white" id="filterBtn" type="button")
        svg(class="w-4 fill-current" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg")
          path(fill-rule="evenodd" clip-rule="evenodd" d="M2.71429 6.33513H4.00476C4.32184 7.46266 5.35016 8.24169 6.52143 8.24169C7.69269 8.24169 8.72102 7.46266 9.0381 6.33513H21.2857C21.6802 6.33513 22 6.01533 22 5.62084C22 5.22635 21.6802 4.90656 21.2857 4.90656H9.04286C8.72578 3.77903 7.69745 3 6.52619 3C5.35493 3 4.3266 3.77903 4.00952 4.90656H2.71429C2.3198 4.90656 2 5.22635 2 5.62084C2 6.01533 2.3198 6.33513 2.71429 6.33513ZM6.52381 4.43037C7.18129 4.43037 7.71429 4.96336 7.71429 5.62084C7.71429 6.27833 7.18129 6.81132 6.52381 6.81132C5.86633 6.81132 5.33333 6.27833 5.33333 5.62084C5.33333 4.96336 5.86633 4.43037 6.52381 4.43037ZM21.2857 11.5732H14.4381C14.0484 10.5662 13.0798 9.90243 12 9.90243C10.9202 9.90243 9.95159 10.5662 9.5619 11.5732H2.71429C2.3198 11.5732 2 11.893 2 12.2875C2 12.682 2.3198 13.0018 2.71429 13.0018H9.42857C9.66166 14.2396 10.7428 15.1362 12.0024 15.1362C13.2619 15.1362 14.3431 14.2396 14.5762 13.0018H21.2857C21.6802 13.0018 22 12.682 22 12.2875C22 11.893 21.6802 11.5732 21.2857 11.5732ZM12 13.7161C11.3425 13.7161 10.8095 13.1831 10.8095 12.5256C10.8095 11.8681 11.3425 11.3351 12 11.3351C12.6575 11.3351 13.1905 11.8681 13.1905 12.5256C13.1905 13.1831 12.6575 13.7161 12 13.7161ZM19.9952 18.2399H21.2857C21.6802 18.2399 22 18.5597 22 18.9542C22 19.3487 21.6802 19.6685 21.2857 19.6685H19.9905C19.6734 20.796 18.6451 21.575 17.4738 21.575C16.3025 21.575 15.2742 20.796 14.9571 19.6685H2.71429C2.3198 19.6685 2 19.3487 2 18.9542C2 18.5597 2.3198 18.2399 2.71429 18.2399H14.9619C15.279 17.1124 16.3073 16.3333 17.4786 16.3333C18.6498 16.3333 19.6782 17.1124 19.9952 18.2399ZM16.2857 18.9542C16.2857 19.6117 16.8187 20.1447 17.4762 20.1447C18.1337 20.1447 18.6667 19.6117 18.6667 18.9542C18.6667 18.2967 18.1337 17.7637 17.4762 17.7637C16.8187 17.7637 16.2857 18.2967 16.2857 18.9542Z")
        span 進階篩選

      // 進階選單
      div(id="advancedMenu" class="lg:hidden fixed top-0 right-0 z-50 w-full duration-150 ease-out bg-white max-w-[85%] translate-y-0 translate-x-[101%]")
        div(class="flex-1 bg-white w-full lg:min-w-[340px] px-6 pt-6 pb-[51px] h-screen overflow-y-auto")
          div(class="flex items-center justify-between")
            p(class="text-base text-black") 進階篩選
            button(id="closeAdvancedMenuButton" type="button") 
              img(src="./images/icon/close_black.svg" alt="")
          div(class="mt-14")
            div(class="flex flex-col")
              button(class="flex items-center justify-between pb-1 border-b border-black advanceDropdownButton" type="button")
                p(class="text-base text-black") 品牌
                img(class="w-4 h-4 minusIcon" src="./images/main/minus.svg" alt="")
                img(class="hidden w-4 h-4 plusIcon" src="./images/main/plus.svg" alt="")
              ul(class="mt-[9px] advanceDropdownList")
                each val in [1, 2, 3, 4, 5]
                  li(class="flex items-center mt-4 space-x-4")
                    input(class="w-4 h-4" type="checkbox")
                    label(class="text-base text-black") 胡同嚴選
          div(class="mt-10")
            div(class="flex flex-col")
              button(class="flex items-center justify-between pb-1 border-b border-black advanceDropdownButton" type="button")
                p(class="text-base text-black") 克數
                img(class="w-4 h-4 minusIcon" src="./images/main/minus.svg" alt="")
                img(class="hidden w-4 h-4 plusIcon" src="./images/main/plus.svg" alt="")
              ul(class="mt-[9px] advanceDropdownList")
                each val in [1, 2, 3, 4, 5]
                  li(class="flex items-center mt-4 space-x-4")
                    input(class="w-4 h-4" type="checkbox")
                    label(class="text-base text-black") 0~50 克
          div(class="mt-10")
            div(class="flex flex-col")
              button(class="flex items-center justify-between pb-1 border-b border-black advanceDropdownButton" type="button")
                p(class="text-base text-black") 種類
                img(class="w-4 h-4 minusIcon" src="./images/main/minus.svg" alt="")
                img(class="hidden w-4 h-4 plusIcon" src="./images/main/plus.svg" alt="")
              ul(class="mt-[9px] advanceDropdownList")
                each val in [1, 2, 3, 4, 5]
                  li(class="flex items-center mt-4 space-x-4")
                    input(class="w-4 h-4" type="checkbox")
                    label(class="text-base text-black") 種類
          div(class="mt-14 flex items-center space-x-[17px]")
            button(class="flex-1 h-12 px-5 text-sm rounded text-slate-800 bg-gray-150" type="button") 清除全部
            button(class="flex-1 h-12 px-5 text-sm text-white bg-black rounded" type="button") 確定篩選 (2)

    include ../components/common/cookieBanner.pug
    include ../components/common/gotop.pug
    include ../components/common/footer.pug
