include ../components/common/head.pug

doctype html
html(lang="zh-Hant-TW")
  +head("category")
  head
    link(rel="stylesheet" href="./css/swiper-bundle.min.css")
    script(src="./js/swiper-bundle.min.js")
  body
    include ../components/common/header.pug

    main(class="flex flex-col mx-auto max-w-screen-2xl pt-6 lg:pt-10 pb-[102px] lg:pb-[120px]")
      div(class="flex pb-10 mx-0 border-b lg:space-x-8 border-neutral-200 lg:mx-10 lg:pb-12")
        // 左邊選單
        section(class="flex-1 max-w-[182px] lg:block hidden")
          p(class="text-xl font-semibold text-slate-600") 低溫食品
          ul(id="dropdownMenu" class="flex flex-col mt-10 space-y-4")
            each val in [1, 2, 3, 4, 5]
              li(class="relative")
                button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                  span= `胡同裏的心港點${val}`
                  img(class="dropdwonIcon" src="./images/arrows/light_small_down.svg", alt="")
                  img(class="hidden dropupIcon" src="./images/arrows/light_small_up.svg", alt="")
                div(class="hidden flex-col mt-[10px] border-t border-b bg-neutral-50 border-neutral-200 dropdownList")
                  each item in [1, 2, 3, 4, 5, 6]
                    a(class="px-5 py-4" href="#")= `港點${item}`

        // 右邊商品列表
        section(class="flex-1")
          // 麵包屑
          ul(class="flex flex-wrap items-center px-6 space-x-1 lg:px-0")
            li(class="breadCrumbLink")
              a(class="text-sm text-slate-600" href="#") 商品
            li(class="breadCrumbLink")
              a(class="text-sm ext-slate-600" href="#") 低溫食品

          // 分類標題
          a(class="block mt-5 lg:mt-6" href="#") 
            img(class="object-cover object-center w-full lg:h-[400px] h-[180px] lg:rounded" src="./images/category/categoryBanner.png" alt="")
          
          // 獨家商品
          p(class="mt-10 text-xl font-semibold text-center text-slate-600 lg:mt-12") 胡同嚴選/ 獨家商品
          div(class="flex justify-between mt-10 lg:px-0 px-[10px] space-x-[10px]")
            each val in [1, 2, 3]
              a(href="#") 
                img(class="object-cover object-center w-full max-h-[335px] h-auto" src=`./images/category/exclusive${val}.png` alt="")
                p(class="lg:text-base text-xs text-slate-600 lg:px-[7px] lg:mt-6 mt-2 text-center lg:text-left") 胡同裏的心港點
          
          // 最新消息
          div(class="mt-10 lg:mt-14")
            a(class="" href="#")
              img(class="" src="./images/category/news.png", alt="")

          // 精選推薦
          p(class="mt-10 text-xl font-semibold text-center text-slate-600 lg:mt-12") 精選推薦
          div(class="grid grid-cols-2 gap-3 px-4 pb-4 mt-10 lg:grid-cols-4 lg:gap-8 lg:px-0 lg:pb-14")
            // 商品卡片 - 1
            include ../components/product/card1.pug
            // 商品卡片 - 2
            include ../components/product/card2.pug
            // 商品卡片 - 3
            include ../components/product/card1.pug
            // 商品卡片 - 4
            include ../components/product/card2.pug

            // 廣告版位
            a(class="flex col-span-2" href="#")
              img(class="object-cover object-center w-full" src="./images/category/categoryAD.png" alt="")

            // 商品卡片 - 5
            include ../components/product/card1.pug
            // 商品卡片 - 6
            include ../components/product/card2.pug

      // 專屬精選項目
      section(class="mt-10 lg:mt-12")
        p(class="text-xl font-semibold text-center text-black") 專屬精選項目

        // 輪播圖
        div(class="lg:!pl-10 !pl-6 !pb-[38px] !mt-[38px] swiper swiper-featured")
          div(class="swiper-wrapper")
            each val in [1, 2, 3, 4, 5, 6]
              a(class="lg:max-w-[320px] max-w-[270px] swiper-slide" href="/")
                img(class="lg:max-w-[320px] max-w-[270px] lg:max-h-[380px] max-h-[320px] w-full h-full object-cover" src=`./images/category/featured${val}.png`, alt="")
                p(class="mt-8 text-base text-black") 全站熱銷商品第二件五折  >
          div(class="2xl:max-w-[1300px] xl:max-w-[1000px] lg:max-w-[900px] md:max-w-[700px] max-w-[320px] !left-[51%] !bottom-0 !-translate-x-1/2 swiper-scrollbar swiper-featured-scrollbar")
          div(class="swiper-button-prev swiper-button-featured-prev bg-white lg:!flex !hidden items-center justify-center !w-12 !h-[60px] !left-0 rotate-180")
            img(src="./images/arrows/arrow_forward_24px.svg" alt="")
          div(class="swiper-button-next swiper-button-featured-next bg-white lg:!flex !hidden items-center justify-center !w-12 !h-[60px] !right-0")
            img(src="./images/arrows/arrow_forward_24px.svg" alt="")
     
        div(class="px-4 lg:px-[148px] lg:mt-14 mt-10")
          div(class="grid grid-cols-2 lg:grid-cols-4 lg:gap-x-8 lg:gap-y-10 gap-x-3 gap-y-4")
            each val in [1, 2, 3, 4, 5, 6, 7, 8]
              include ../components/product/card1.pug
              include ../components/product/card2.pug

          // 分頁
          div(class="lg:mt-[66px] mt-10 lg:flex hidden items-center justify-center space-x-4")
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") <
            // active 狀態為 "text-white bg-origin-500"，非 active 狀態為 "text-slate-800"
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium text-white rounded-sm bg-origin-500" type="button") 1
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") 2
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") 3
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") ...
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") 10
            button(class="flex items-center justify-center w-5 h-5 text-sm font-medium rounded-sm text-slate-800" type="button") >

    include ../components/common/cookieBanner.pug
    include ../components/common/gotop.pug
    include ../components/common/footer.pug
