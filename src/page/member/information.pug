include ../../components/member/head.pug

doctype html
html(lang="zh-Hant-TW")
  +head("information")
  body
    include ../../components/member/header.pug

    main(class="flex flex-col mx-auto max-w-screen-2xl pt-6 pb-[120px] lg:pb-[194px]")
      // 麵包屑
      ul(class="flex flex-wrap items-center px-6 mx-0 space-x-1 lg:mx-12 lg:px-0")
        li(class="breadCrumbLink")
          a(class="text-sm text-slate-600" href="#") 首頁
        li(class="breadCrumbLink")
          a(class="text-sm text-slate-600" href="#") 會員中心
        li(class="breadCrumbLink")
          a(class="text-sm text-slate-600" href="#") 我的資料

      div(class="flex mx-0 xl:space-x-[100px] lg:space-x-12 lg:mx-12 mt-10")
        // 左邊選單
        section(class="flex-1 max-w-[182px] lg:block hidden")
          p(class="text-xl font-semibold text-slate-600") 會員中心
          ul(id="dropdownMenu" class="flex flex-col mt-10 space-y-4")
            li(class="relative")
              button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                span 我的資料
                img(class="dropdwonIcon" src="../images/arrows/light_small_down.svg" alt="")
                img(class="hidden dropupIcon" src="../images/arrows/light_small_up.svg" alt="")
              div(class="hidden flex-col mt-[10px] border-t border-b bg-neutral-50 border-neutral-200 dropdownList")
                a(class="px-5 py-3" href="#")
                  // active 狀態: before:absolute before:-bottom-1 before:left-0 before:w-full before:border-b before:border-black
                  span(class="relative") 修改密碼
                a(class="px-5 py-3" href="#")
                  span(class="relative") 付款資訊
                a(class="px-5 py-3" href="#") 
                  span(class="relative") 常用地址
                a(class="px-5 py-3" href="#") 
                  span(class="relative") 發票歸戶
            li(class="relative")
              button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                span 訂單資料
                img(class="dropdwonIcon" src="../images/arrows/light_small_down.svg" alt="")
                img(class="hidden dropupIcon" src="../images/arrows/light_small_up.svg" alt="")
            li(class="relative")
              button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                span 點數紀錄
                img(class="dropdwonIcon" src="../images/arrows/light_small_down.svg" alt="")
                img(class="hidden dropupIcon" src="../images/arrows/light_small_up.svg" alt="")
            li(class="relative")
              button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                span 優惠卷
                img(class="dropdwonIcon" src="../images/arrows/light_small_down.svg" alt="")
                img(class="hidden dropupIcon" src="../images/arrows/light_small_up.svg" alt="")
            li(class="relative")
              button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                span 登出

        // 右邊區塊
        section(class="flex-1 mx-6 lg:mx-0")
          div(class="flex flex-col space-y-10 lg:space-y-16")
            // 我的資料
            div
              div(class="border-b border-neutral-200 lg:pb-[26px] pb-4")
                p(class="text-xl font-bold text-black") 我的資料
              div(class="py-10 border-b border-neutral-200")
                div
                  div(class="flex items-center space-x-7")
                    p(class="text-sm text-black lg:text-base") 手機號碼
                    div(class="flex items-center space-x-2")
                      img(src="../images/member/icon_circle_checked.svg" alt="")
                      p(class="text-green-500") 已驗證
                  p(class="text-sm text-black lg:text-base mt-[27px]") 0934 *** 036
              div(class="flex flex-col mt-10 space-y-3")
                label(class="text-sm text-slate-800" for="name") 姓名*
                input(class="max-w-[455px] w-full h-[52px] border border-neutral-200 rounded px-6" id="name" type="text" value="李彼得")
              div(class="flex flex-col mt-10 space-y-3")
                label(class="text-sm text-slate-800" for="birthday") 生日
                input(class="max-w-[455px] w-full h-[52px] border border-neutral-200 rounded px-6" id="birthday" type="date" value="1979-10-17")
              div(class="flex flex-col mt-10 space-y-3")
                label(class="text-sm text-slate-800" for="email") Email*
                input(class="max-w-[455px] w-full h-[52px] border border-neutral-200 rounded px-6" id="email" type="text" value="peter***@ne-plus.com")
            // 編輯郵寄地址
            div
              div(class="border-b border-neutral-200 lg:pb-[26px] pb-4")
                p(class="text-xl font-bold text-black") 編輯郵寄地址
              div(class="py-10 border-b border-neutral-200")
                div(class="flex flex-col space-y-8 lg:flex-row lg:space-x-5 lg:space-y-0")
                  div(class="flex flex-col space-y-[15px]")
                    p(class="text-sm text-slate-800") 縣市
                    div(class="lg:w-[190px] w-full flex-1 select-wrapper")
                      select(class="w-full h-12 px-6 py-[9px] text-base border rounded appearance-none text-black border-neutral-200")
                        option(value="台北市") 台北市
                        option(value="新北市") 新北市
                        option(value="基隆市") 基隆市
                  div(class="flex flex-col space-y-[15px]")
                    p(class="text-sm text-slate-800") 鄉鎮區
                    div(class="lg:w-[190px] w-full flex-1 select-wrapper")
                      select(class="w-full h-12 px-6 py-[9px] text-base border rounded appearance-none text-black border-neutral-200")
                        option(value="中山區") 中山區
                        option(value="信義區") 信義區
                        option(value="仁愛區") 仁愛區
                  div(class="flex flex-col space-y-[15px]")
                    p(class="text-sm text-slate-800") 鄉鎮區
                    input(class="lg:w-[455px] w-full h-[52px] border border-neutral-200 rounded px-6" type="text" value="中山北路三段39號11樓之三")
                div(class="flex items-center mt-10 space-x-5 lg:mt-12")
                  button(class="text-center rounded max-w-[218px] h-[52px] w-full bg-gray-150 text-slate-800 text-base" type="button") 取消
                  button(class="text-center rounded max-w-[218px] h-[52px] w-full bg-origin-600 text-white text-base" type="button") 儲存

    include ../../components/member/footer.pug
