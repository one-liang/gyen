include ../components/common/head.pug

doctype html
html(lang="zh-Hant-TW")
  +head("activity")
  body
    include ../components/common/header.pug

    main(class="flex flex-col mx-auto max-w-screen-2xl pt-6 lg:pt-10 pb-[86px] lg:pb-[120px]")
      div(class="flex pb-10 mx-0 lg:space-x-8 lg:mx-10 lg:pb-0")
        // 左邊選單
        section(class="flex-1 max-w-[182px] lg:block hidden")
          p(class="text-xl font-semibold text-slate-600") 當期活動
          ul(id="dropdownMenu" class="flex flex-col mt-10 space-y-4")
            each val in [1, 2, 3, 4, 5]
              li(class="relative")
                button(class="flex items-center justify-between w-full text-base dropdownButton text-slate-600")
                  span= `下殺折扣${val}`
                  img(class="dropdwonIcon" src="./images/arrows/light_small_down.svg", alt="")
                  img(class="hidden dropupIcon" src="./images/arrows/light_small_up.svg", alt="")
                div(class="hidden flex-col mt-[10px] border-t border-b bg-neutral-50 border-neutral-200 dropdownList")
                  each item in [1, 2, 3, 4, 5, 6]
                    a(class="px-5 py-4" href="#")= `低溫食品全面9折${item}`

        // 右邊商品列表
        section(class="flex-1")
          // 麵包屑
          ul(class="flex flex-wrap items-center px-6 space-x-1 lg:px-0")
            li(class="breadCrumbLink")
              a(class="text-sm text-slate-600" href="#") 熱銷活動
            li(class="breadCrumbLink")
              a(class="text-sm text-slate-600" href="#") 當期活動

          // 分類標題
          a(class="block mt-5 lg:mt-6" href="#") 
            img(class="object-cover object-center w-full lg:h-[400px] h-[180px] lg:rounded" src="./images/activity/activityBanner.png" alt="")

          div(class="mt-10 px-[51px] lg:px-4")
            p(class="lg:text-[40px] lg:leading-normal text-xl font-semibold text-black text-center") 限時下殺！低溫食品 全面9折
            p(class="mt-5 text-sm text-center text-black lg:text-xl") 歡慶龍年到，胡同嚴選燒肉低溫食品即日起到明日全面9折
            div(class="mt-5 text-center lg:mt-7")
              // 狀態 1 -> 活動現正進行中
              button(class="px-16 py-4 text-base font-semibold text-white bg-green-600 rounded" type="button") 活動現正進行中
              // 狀態 2 -> 活動已結束 & 活動尚未開始
              // button(class="px-16 py-4 text-base font-semibold text-white rounded bg-neutral-400" type="button" disabled) 活動已結束
              // button(class="px-16 py-4 text-base font-semibold text-white rounded bg-neutral-400" type="button" disabled) 活動尚未開始
            div(class="flex items-center justify-center mt-5 space-x-2 lg:mt-7")
              img(src="./images/icon/clock.svg", alt="")
              p(class="text-base text-black") 活動時間 2024.01.01~2024.12.31

          // 倒數區塊
          section(class="bg-origin-600 lg:py-[27px] py-3 lg:h-[90px] h-[74px] lg:mt-12 mt-10")
            div(class="flex flex-col items-center justify-center space-y-3 lg:space-x-10 lg:space-y-0 lg:flex-row")
              p(class="text-white lg:text-[22px] text-xs font-medium flex space-x-1")
                span 龍年盛典
                span(class="inline-block lg:hidden") 限時倒數
              div(class="flex items-center space-x-2")
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white bg-orange-400 rounded lg:w-7 w-4 lg:h-9 h-[22px]") 1
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white bg-orange-400 rounded lg:w-7 w-4 lg:h-9 h-[22px]") 2
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white lg:w-7 w-4 lg:h-9 h-[22px]") ：
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white bg-orange-400 rounded lg:w-7 w-4 lg:h-9 h-[22px]") 0
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white bg-orange-400 rounded lg:w-7 w-4 lg:h-9 h-[22px]") 8
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white lg:w-7 w-4 lg:h-9 h-[22px]") ：
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white bg-orange-400 rounded lg:w-7 w-4 lg:h-9 h-[22px]") 0
                span(class="flex items-center justify-center lg:text-2xl text-base font-medium text-white bg-orange-400 rounded lg:w-7 w-4 lg:h-9 h-[22px]") 8
              p(class="text-white lg:text-[22px] text-xs font-medium lg:block hidden") 限時倒數

          // Banner
          div(class="flex justify-between mt-10 lg:mt-8 lg:px-0 px-[10px] space-x-[10px]")
            each val in [1, 2, 3]
              a(href="#") 
                img(class="object-cover object-center w-full max-w-[360px] max-h-[230px] h-auto" src=`https://fakeimg.pl/360x230/?text=Banner${val}` alt="")
          
          // 篩選列表
          section(class="mt-10 lg:mt-7")
            ul(class="flex items-center text-xl font-semibold text-center text-black lg:px-0 px-6 lg:space-x-[46px] space-x-2")
              li
                p(class="text-sm text-slate-600") 最新
              // active 狀態為 "text-origin-700 bg-neutral-100"，非 active 狀態為 "text-slate-600"
              li
                button(class="px-3 lg:px-[18px] py-[15px] text-sm text-origin-700 bg-neutral-100 flex items-center space-x-3 rounded-lg duration-150 group hover:text-origin-700 hover:bg-neutral-100" type="button")
                  span 價錢高到低
                  svg(class="fill-current" width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
