header(class="sticky top-0 z-50")
  // topbar
  div(class="relative z-20 flex items-center h-6 overflow-hidden bg-black lg:justify-center lg:h-8")
    a(class="px-1 text-white text-11 line-clamp line-clamp-1" href="#") 橘焱胡同與您歡慶聖誕節開幕慶，大促～限量商品最高 50% off，每日整點
      p(class="underline hover:no-underline") 限時開搶
      | 中！！
    button(class="absolute hidden -translate-y-1/2 top-1/2 right-5 lg:block" type="button")
      img(src="../images/icon/close.svg" alt="")

  nav(class="z-20 relative bg-white lg:h-[148px] h-[88px] flex items-center justify-between px-6 lg:px-12")
    // nav PC
    ul(id="navMenu" class="hidden space-x-12 lg:flex lg:items-center")
      li
        button(class="text-sm text-black" type="button" data-nav="1") 全部商品
      li
        button(class="text-sm text-black" type="button" data-nav="2") 最新商品
      li
        button(class="text-sm text-black" type="button" data-nav="3") 品牌旗艦館
      li
        button(class="text-sm text-black" type="button" data-nav="4") 熱銷活動

    // burger & search menu
    div(class="flex items-center space-x-5 lg:hidden")
      button(id="burgerMenuButton" type="button")
        img(src="../images/icon/menu.svg" alt="")
      button(id="searchMenuButton" type="button")
        img(src="../images/main/search.svg" alt="")

    // logo
    a(href="#")
      img(class="lg:w-auto w-[58px]" src="../images/logo.png" alt="橘焱胡同")

    // right side
    div(class="flex items-center space-x-5")
      div(class="relative hidden lg:block")
        button(class="absolute -translate-y-1/2 left-3 top-1/2" type="button")
          img(src="../images/main/search.svg" alt="")
        input(class="w-[169px] h-12 text-sm text-gray-400 border border-gray-200 rounded-full lg:pl-12 pr-7" type="text" placeholder="找商品  聖誕節")
      button(id="memberMenuButton" type="button")
        img(src="../images/main/user.svg" alt="")
      a(class="relative" href="#")
        img(src="../images/main/cart.svg" alt="")
        div(class="absolute top-[-7px] left-[15px] px-[3px] py-[1px] flex items-center justify-center min-w-4 h-4 font-semibold text-white rounded-full text-10 bg-origin-600") 99+

  // menu PC
  div(id="menuList" class="absolute z-10 w-full duration-150 ease-out bg-white lg:drop-shadow-md lg:max-w-full max-w-[95%] lg:opacity-0 lg:-translate-y-full translate-y-0 lg:translate-x-0 -translate-x-[101%]")
    div(id="menuListItem" class="flex items-center h-12 px-[17px] space-x-6 lg:justify-center lg:h-14 bg-gray-50 lg:space-x-32 whitespace-nowrap overflow-x-auto")
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="javascript:;" data-list="1") 全部商品
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="javascript:;" data-list="2") 最新商品
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="javascript:;" data-list="3") 品牌旗艦館
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="javascript:;" data-list="4") 熱銷活動
    // menu list
    div(class="flex lg:h-[480px] h-full lg:min-h-full min-h-screen")
      div(class="flex-1 bg-white w-full lg:min-w-[340px] lg:px-12 px-5 lg:py-[57px] py-[26px]")
        p(class="hidden mb-10 text-xl font-semibold lg:block") 低溫食品
        ul
          li(class="hidden mb-6 lg:block")
            a(class="flex items-center justify-between w-full text-sm text-black group" href="#")
              span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") #{val} 全部
          each val in [1, 2, 3, 4]
            li(class="mb-8 lg:mb-6")
              a(class="flex items-center justify-between w-full text-sm text-gray-400 lg:text-black hover:text-black group" href="#")
                span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") #{val} 胡同裡的心港點
                img(class="hidden w-3 h-2 lg:block" src="../images/arrows/light_large_right.svg" alt="")
      div(class="lg:flex-1 flex-[2_2_0%] bg-gray-100 w-full lg:min-w-[340px] lg:px-12 px-[34px] lg:py-[57px] py-[26px]")
        p(class="hidden mb-10 text-base lg:block") 低溫肉品
        ul(class="space-y-6")
          each val in [1, 2, 3, 4, 5, 6, 7]
            li
              a(class="flex items-center justify-between w-full pb-1 text-sm text-black" href="#") #{val} 牛肉
      div(class="flex-[2_2_0%] w-full overflow-hidden lg:block hidden")
        img(class="object-cover w-full h-full" src="../images/header/banner.png" alt="")
    
  // search list
  div(id="searchList" class="absolute z-10 w-full px-6 pt-6 pb-[70px] duration-150 ease-out bg-white -translate-y-full")
    div(class="relative") 
      input(class="w-full h-12 pl-6 pr-8 text-sm text-gray-400 border border-gray-200 rounded-full searchInput" type="text" placeholder="找商品  聖誕節")
      button(class="absolute -translate-y-1/2 right-3 top-1/2" type="button")
        img(class="searchIcon" src="../images/main/search.svg" alt="")
        img(class="hidden searchCloseIcon" src="../images/icon/close_black.svg" alt="")
    div(class="flex flex-col mt-6 px-[13px]")
      p(class="text-sm font-semibold text-black") 熱門搜尋
      ul(class="flex flex-col mt-6 space-y-5")
        li
          a(class="text-sm text-black" href="#") 胡同裏的心港點
        li
          a(class="text-sm text-black" href="#") 聯名首發
        li
          a(class="text-sm text-black" href="#") 聖誕大餐烤雞

  // member list
  div(id="memberList" class="absolute z-10 w-full duration-150 ease-out bg-white lg:drop-shadow-md lg:max-w-full max-w-[95%] lg:opacity-0 lg:-translate-y-full translate-y-0 lg:translate-x-0 -translate-x-[101%]")
    div(class="flex lg:h-[480px] h-full lg:min-h-full min-h-screen")
      div(class="flex-1 bg-white w-full lg:min-w-[340px] lg:px-12 px-5 lg:py-[57px] py-[26px]")
        ul
          li(class="mb-8 lg:mb-6")
            a(class="flex items-center justify-between w-full text-sm text-gray-400 lg:text-black hover:text-black group" href="#")
              span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") 我的資料
              img(class="hidden w-3 h-2 lg:block" src="../images/arrows/light_large_right.svg" alt="")
          li(class="mb-8 lg:mb-6")
            a(class="flex items-center justify-between w-full text-sm text-gray-400 lg:text-black hover:text-black group" href="#")
              span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") 發票歸戶
              img(class="hidden w-3 h-2 lg:block" src="../images/arrows/light_large_right.svg" alt="")
          li(class="mb-8 lg:mb-6")
            a(class="flex items-center justify-between w-full text-sm text-gray-400 lg:text-black hover:text-black group" href="#")
              span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") 購買紀錄
              img(class="hidden w-3 h-2 lg:block" src="../images/arrows/light_large_right.svg" alt="")
          li(class="mb-8 lg:mb-6")
            a(class="flex items-center justify-between w-full text-sm text-gray-400 lg:text-black hover:text-black group" href="#")
              span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") 優惠券
