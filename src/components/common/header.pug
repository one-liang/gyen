header(class="relative")
  // topbar
  div(class="relative flex items-center h-6 overflow-hidden bg-black lg:justify-center lg:h-8")
    p(class="hidden text-white text-11 whitespace-nowrap lg:block") 橘焱胡同與您歡慶聖誕節開幕慶，大促～限量商品最高 50% off，每日整點
      a(class="underline hover:no-underline" href="/") 限時開搶
      | 中！！
    // 手機版跑馬燈
    marquee(class="text-white text-11 whitespace-nowrap lg:hidden") 橘焱胡同與您歡慶聖誕節開幕慶，大促～限量商品最高 50% off，每日整點
      a(class="underline hover:no-underline" href="/") 限時開搶
      | 中！！
    button(class="absolute hidden -translate-y-1/2 top-1/2 right-5 lg:block" type="button")
      img(src="./images/icon/close.svg", alt="")

  nav(class="bg-white lg:h-[148px] h-[88px] flex items-center justify-between px-6 lg:px-12")
    // nav PC
    ul(id="navMenu" class="hidden space-x-12 lg:flex lg:items-center")
      li
        button(class="text-sm text-black" type="button") 全部商品
      li
        button(class="text-sm text-black" type="button") 最新商品
      li
        button(class="text-sm text-black" type="button") 品牌旗艦館
      li
        button(class="text-sm text-black" type="button") 熱銷活動

    // burger menu
    div(class="flex items-center space-x-5 lg:hidden")
      button(type="button")
        img(src="./images/icon/menu.svg", alt="")
      button(type="button")
        img(src="./images/main/search.svg", alt="")

    // logo
    a(href="/")
      img(class="lg:w-auto w-[58px]" src="./images/logo.png" alt="橘焱胡同")

    // right side
    div(class="flex items-center space-x-5")
      div(class="relative hidden lg:block")
        button(class="absolute -translate-y-1/2 left-3 top-1/2" type="button")
          img(src="./images/main/search.svg", alt="")
        input(type="text", placeholder="找商品  聖誕節 ", class="w-[169px] h-12 text-sm text-gray-400 border border-gray-200 rounded-full lg:pl-12 pr-7")
      a(href="/")
        img(src="./images/main/user.svg", alt="")
      a(href="/")
        img(src="./images/main/cart.svg", alt="")

  // menu PC
  div(id="menuList" class="absolute w-full bg-white drop-shadow-md")
    div(id="menuListItem" class="hidden lg:flex lg:justify-center lg:items-center lg:h-14 bg-gray-50 lg:space-x-32")
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="/") 全部商品
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="/") 最新商品
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="/") 品牌旗艦館
      a(class="pb-1 text-sm text-black duration-200 border-b border-transparent hover:border-black" href="/") 熱銷活動
    // menu list
    div(class="flex h-[480px]")
      div(class="bg-white w-[340px] px-12 py-[57px]")
        p(class="mb-10 text-xl font-semibold") 低溫食品
        ul(class="space-y-6")
          li
            a(class="flex items-center justify-between w-full text-sm text-black group" href="/")
              span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") #{val} 全部
          each val in [1, 2, 3, 4]
            li 
              a(class="flex items-center justify-between w-full text-sm text-black group" href="/")
                span(class="pb-1 duration-200 border-b border-transparent group-hover:border-black") #{val} 胡同裡的心港點
                img(class="w-3 h-2" src="./images/arrows/light_large_right.svg", alt="")
      div(class="bg-gray-100 w-[340px] px-12 py-[57px]")
        p(class="mb-10 text-base") 低溫肉品
        ul(class="space-y-6")
          each val in [1, 2, 3, 4, 5, 6, 7]
            li
              a(class="flex items-center justify-between w-full pb-1 text-sm text-black" href="/") #{val} 牛肉
      div(class="flex-1 w-full overflow-hidden")
        img(class="object-cover w-full h-full" src="./images/header/banner.png", alt="")
    
